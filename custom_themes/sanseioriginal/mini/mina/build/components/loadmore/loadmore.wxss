/* loadmore */
.loadmore {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  margin: 12rpx;
  padding: 12rpx;
  text-align: center;
}
.loadmore.centered {
  justify-content: center;
}
.loadmore.reverse {
  flex-direction: column-reverse;
}
.loadmore .flex {
  flex: 1;
}
.loadmore .icon {
  margin: 0 auto;
  width: 48rpx;
  height: 48rpx;
  background-image: url('data:image/svg+xml;base64,');
}
.loadmore .more-text {
  margin: 24rpx;
  font-size: 28rpx;
  line-height: 1;
  color: #999;
}
.spin {
  animation: spin 0.9s infinite linear;
}
@keyframes spin {
  100% {
    transform: rotate(360deg);
  }
}
