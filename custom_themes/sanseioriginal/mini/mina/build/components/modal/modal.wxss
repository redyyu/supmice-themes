/* modal */
.modal {
  position: fixed;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  z-index: 999;
}
.modal.active {
  left: 0;
}
.modal .modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.54);
  opacity: 0;
  z-index: 9;
}
.modal .modal-inner {
  position: relative;
  width: 90%;
  height: auto;
  max-height: 90%;
  padding: 0;
  z-index: 99;
}
.modal .modal-inner .modal-content {
  position: relative;
  left: -100%;
}
