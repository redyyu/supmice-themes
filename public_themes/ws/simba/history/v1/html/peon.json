{
  "watch":{
    "clean": true,
    "server": true
  },
  "init":{
    "copy": {
      "libs":{
        "flatten": true,
        "src":[
          "hammer.js/hammer.js",
          "zepto/zepto.js",
          "svg-sprites-render/svg-sprites-render.js",
          "leapjs/leap-0.6.4.js"
        ],
        "cwd":"bower_components",
        "dest":"/src/scripts/libs/"
      },
      "css":{
        "flatten": true,
        "src":[
          "normalize-css/normalize.css"
        ],
        "cwd":"bower_components",
        "dest":"/src/styles/"
      }
    }
  },
  "build":{
    "render":{
      "cwd": "src",
      "dest": "build",
      "clean": true
    }
  }
}